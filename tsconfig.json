{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"outDir": "./dist",
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",
		"baseUrl": "./src",
		"paths": {
			"@assets/*": ["assets/*"],
			"@components/*": ["components/*"],
			"@constants/*": ["constants/*"],
			"@pages/*": ["pages/*"],
			"@providers/*": ["providers/*"],
			"@router/*": ["router/*"],
			"@store/*": ["store/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"include": ["src/**/*.tsx", "src/**/*.ts", "index.d.ts", "cypress"],
	"exclude": ["node_modules"]
}
